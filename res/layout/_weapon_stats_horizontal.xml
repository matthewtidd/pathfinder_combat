<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/new_condition"
    android:paddingTop="5dp" >

    <View
        android:id="@+id/viewBreak1"
        style="@style/horizontal_break"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView1"
        style="@style/section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewBreak1"
        android:text="@string/weapon" />

    <View
        android:id="@+id/spacer1"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/textView1" />

    <TextView
        android:id="@+id/txtWeaponFullName"
        style="@style/weapon_stat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spacer1"
        android:text="@string/weapon"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnWeapons"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0sp"
        android:layout_marginTop="3sp"
        android:text="@string/manage_weapons" />

</RelativeLayout>